@model IEnumerable<PeliculaViewModel>
@{
	ViewBag.Title = "Home Page";
}
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Genero</th>
            <th><a asp-controller="App" asp-action="Edit" class="btn btn-primary">Agregar Peliculas</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Genero</td>
                <td><a asp-controller="App" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                <a asp-controller="App" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Estas seguro que deseas eliminar la pelicula esta pelicula?')" class="btn btn-primary">Eliminar</a></td>
            </tr>
        }        
    </tbody>
</table>