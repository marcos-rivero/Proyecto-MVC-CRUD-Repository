@model IEnumerable<PersonaViewModel>
@{
	ViewBag.Title = "Home Page";
}
<partial name="_Botones" />
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Direccion</th>
            <th>Email</th>
            <th><a asp-controller="Persona" asp-action="Edit" class="btn btn-primary">Agregar Personas</a></th>
        </tr>
    </thead>
    <tbody>
        @if(Model == null){
            <tr><td>No hay datos</td></tr>
        }
        else{
            @foreach(var item in Model){
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Direccion</td>
                    <td>@item.Email</td>
                    <td><a asp-controller="Persona" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-controller="Persona" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Estas seguro que deseas eliminar la pelicula esta pelicula?')" class="btn btn-primary">Eliminar</a></td>
                </tr>
            }   
        }
             
    </tbody>
</table>